let invert ls =
    let rec invert list i =
        if i = List.length ls then
            list
        else
            invert (List.item i ls :: list) (i + 1)
    invert [] 0

let list_1 = [1; 2; 3]
let list_2 = [(1,"a"); (2,"b"); (3,"c")]
let inverted_list_1 = invert list_1
let inverted_list_2 = invert list_2
